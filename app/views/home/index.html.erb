<div class="jumbotron text-center">
  <h1 class="display-4">Welcome to PBMS</h1>

  <% if user_signed_in? %>
    <p class="lead">Welcome, <%= current_user.email %> (<%= current_user.role %>)!</p>
    <hr class="my-4">
    <p>You can manage the following resources:</p>
    <div class="btn-group" role="group" aria-label="Navigation buttons">
      <%= link_to 'Locations', locations_path, class: "btn btn-primary" %>
      <%= link_to 'Power Banks', power_banks_path, class: "btn btn-primary" %>
      <%= link_to 'Stations', stations_path, class: "btn btn-primary" %>
      <%= link_to 'Warehouses', warehouses_path, class: "btn btn-primary" %>
      <%= link_to 'Users', users_path, class: "btn btn-primary" %>
    </div>
    <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <p>Please <%= link_to 'Login', new_user_session_path %> or <%= link_to 'Sign up', new_user_registration_path %> to continue.</p>
  <% end %>
</div>
