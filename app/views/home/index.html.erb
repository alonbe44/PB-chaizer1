<div class="jumbotron text-center" style="margin-top: 3rem; background-color: #e9ecef; padding: 3rem; border-radius: 0.5rem;">
  <h1 class="display-4" style="font-weight: bold; color: #343a40;">Welcome to PBMS</h1>
  <% if user_signed_in? %>
    <p class="lead" style="font-size: 1.5rem; color: #6c757d;">Welcome, <%= current_user.email %> (<%= current_user.role %>)!</p>
    <hr class="my-4" style="border-top: 1px solid #dee2e6;">
    <p style="font-size: 1.25rem; color: #495057;">You can manage the following resources:</p>
    <div class="btn-group btn-group-lg mt-3" role="group" aria-label="Navigation buttons" style="display: flex; justify-content: center;">
      <%= link_to 'Locations', locations_path, class: "btn btn-primary mx-2", style: "background-color: #007bff; border-color: #007bff; font-size: 1.25rem;" %>
      <%= link_to 'Power Banks', power_banks_path, class: "btn btn-primary mx-2", style: "background-color: #007bff; border-color: #007bff; font-size: 1.25rem;" %>
      <%= link_to 'Stations', stations_path, class: "btn btn-primary mx-2", style: "background-color: #007bff; border-color: #007bff; font-size: 1.25rem;" %>
      <%= link_to 'Warehouses', warehouses_path, class: "btn btn-primary mx-2", style: "background-color: #007bff; border-color: #007bff; font-size: 1.25rem;" %>
      <%= link_to 'Users', users_path, class: "btn btn-primary mx-2", style: "background-color: #007bff; border-color: #007bff; font-size: 1.25rem;" %>
    </div>
    <div class="mt-4">
      <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-danger btn-lg', style: "background-color: #dc3545; border-color: #dc3545; font-size: 1.25rem;" %>
    </div>
  <% else %>
    <p class="lead mt-4" style="font-size: 1.5rem; color: #6c757d;">Please log in or sign up to continue.</p>
    <div class="mt-3">
      <%= link_to 'Login', new_user_session_path, class: "btn btn-primary btn-lg mx-2", style: "background-color: #007bff; border-color: #007bff; font-size: 1.25rem;" %>
    </div>
  <% end %>
</div>
