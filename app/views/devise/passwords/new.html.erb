<div class="jumbotron text-center" style="margin-top: 3rem; background-color: #e9ecef; padding: 3rem; border-radius: 0.5rem;">
  <h2 class="display-4" style="font-weight: bold; color: #343a40;">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="form-group">
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>

    <div class="form-group">
      <%= f.label :email, style: 'display: block; margin-bottom: 0.5rem;' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "Email" %>
    </div>

    <div class="form-group">
      <%= f.submit "Send me reset password instructions", class: 'btn btn-primary btn-lg btn-block', style: "background-color: #007bff; border-color: #007bff;" %>
    </div>
  <% end %>

  <div class="mt-4">
    <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-secondary btn-lg", style: "background-color: #6c757d; border-color: #6c757d;" %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-success btn-lg", style: "background-color: #28a745; border-color: #28a745;" %>
  </div>

  <div class="mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
